#!/bin/bash
# teisendab eelmises Ã¼lesandes koostatud skript, valjastab kujundi ekraanile

echo -e "sisesta ridade arv: \c"
read ridade_arv
echo -e "sisesta tarnide arv reas: \c"
read tarnide_arv
for (( r=1; r<=$ridade_arv; r++ ))
do
	echo -n "$r. "
	if [ $r -eq 1 -o $r -eq $ridade_arv ]; then
		for (( t=1; t<=$ridade_arv; t++ ))
		do
			echo -n "* "
		done
	else
		echo -n "* "
		for (( t=2; t<$tarnide_arv; t++ ))
		do
			echo -n " "
		done
		echo -n "* "
	fi
	echo ""
done
